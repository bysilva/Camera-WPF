<Window x:Class="cam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400" Loaded="Window_Loaded" Closed="Window_Closed">
    <DockPanel>
        <UniformGrid Columns="2" DockPanel.Dock="Top">
            <ComboBox x:Name="comboBox1"></ComboBox>
            <Button Content="play" Click="Button_Click"></Button>
        </UniformGrid>
        <Image x:Name="VideoContainer2"></Image>
    </DockPanel>
</Window>
